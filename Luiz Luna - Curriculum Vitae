// Interactive background particles (lightweight)
(function initParticles() {
  const canvas = document.getElementById('bg');
  const ctx = canvas.getContext('2d');
  let w, h, dpr, points;

  function resize() {
    dpr = window.devicePixelRatio || 1;
    w = canvas.width = innerWidth * dpr;
    h = canvas.height = innerHeight * dpr;
    canvas.style.width = innerWidth + 'px';
    canvas.style.height = innerHeight + 'px';
    spawnPoints();
  }
  function spawnPoints() {
    const count = Math.min(100, Math.floor(innerWidth / 18));
    points = Array.from({ length: count }).map(() => ({
      x: Math.random() * w,
      y: Math.random() * h,
      vx: (Math.random() - .5) * .2 * dpr,
      vy: (Math.random() - .5) * .2 * dpr,
      r: Math.random() * 1.5 * dpr
    }));
  }
  function step() {
    const g = ctx;
    g.clearRect(0, 0, w, h);
    g.globalAlpha = .7;
    for (const p of points) {
      p.x += p.vx; p.y += p.vy;
      if (p.x < 0 || p.x > w) p.vx *= -1;
      if (p.y < 0 || p.y > h) p.vy *= -1;
      g.beginPath();
      const gradient = g.createRadialGradient(p.x, p.y, 0, p.x, p.y, 80 * dpr);
      gradient.addColorStop(0, 'rgba(124,156,255,.15)');
      gradient.addColorStop(1, 'rgba(124,156,255,0)');
      g.fillStyle = gradient;
      g.arc(p.x, p.y, 80 * dpr, 0, Math.PI * 2);
      g.fill();
      // tiny core
      g.globalAlpha = .8;
      g.fillStyle = 'rgba(63,227,194,.9)';
      g.beginPath();
      g.arc(p.x, p.y, p.r, 0, Math.PI * 2);
      g.fill();
      g.globalAlpha = .7;
    }
    requestAnimationFrame(step);
  }
  resize();
  step();
  addEventListener('resize', resize);
})();

// Typewriter subtitle
(function typewriter() {
  const el = document.getElementById('typewriter');
  const phrases = [
    'Developer ‚Ä¢ Python ‚Ä¢ JavaScript ‚Ä¢ React',
    'Power Automate & Power Apps',
    'Exploring AI and modern web UX'
  ];
  let i = 0, j = 0, deleting = false;
  function tick() {
    const current = phrases[i];
    if (!deleting) {
      el.textContent = current.slice(0, ++j);
      if (j === current.length) { deleting = true; setTimeout(tick, 1200); return; }
    } else {
      el.textContent = current.slice(0, --j);
      if (j === 0) { deleting = false; i = (i + 1) % phrases.length; }
    }
    setTimeout(tick, deleting ? 28 : 32);
  }
  tick();
})();

// Reveal-on-scroll
(function reveal() {
  const observer = new IntersectionObserver(entries => {
    for (const e of entries) {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
        observer.unobserve(e.target);
      }
    }
  }, { threshold: .12, rootMargin: '0px 0px -40px 0px' });
  document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
})();

// Subtle 3D tilt and card glow
(function tilt() {
  const cards = document.querySelectorAll('[data-tilt]');
  for (const card of cards) {
    card.addEventListener('pointermove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      const rx = ((y / rect.height) - .5) * -6;
      const ry = ((x / rect.width) - .5) * 6;
      card.style.transform = `perspective(900px) rotateX(${rx}deg) rotateY(${ry}deg) translateZ(0)`;
      card.style.setProperty('--mx', `${x}px`);
      card.style.setProperty('--my', `${y}px`);
    });
    card.addEventListener('pointerleave', () => {
      card.style.transform = '';
    });
  }
})();

// Theme toggle + persist
(function theme() {
  const root = document.documentElement;
  const toggle = document.getElementById('themeToggle');
  const prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;
  const saved = localStorage.getItem('theme');
  if ((saved === 'light') || (!saved && prefersLight)) root.classList.add('light');
  toggle.addEventListener('click', () => {
    root.classList.toggle('light');
    localStorage.setItem('theme', root.classList.contains('light') ? 'light' : 'dark');
  });
})();

// Print to PDF
document.getElementById('printBtn').addEventListener('click', () => window.print());

// Dynamic year
document.getElementById('year').textContent = new Date().getFullYear();
